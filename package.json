{
	"name": "@entr/browsersync-webpack-plugin",
	"version": "0.6.0",
	"description": "Combines BrowserSync, webpack-dev-middleware, and webpack-hot-middleware into one ezpz plugin.",
	"main": "index.js",
	"repository": "https://github.com/entr/browsersync-webpack-plugin.git",
	"author": "QWp6t",
	"license": "OSL-3.0",
	"lint-staged": {
		"*.js": [
			"lint",
			"git add"
		]
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": 4.3
					}
				}
			]
		],
		"comments": false
	},
	"jest": {
		"coverageDirectory": "coverage"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"tabWidth": 8,
		"trailingComma": "es5"
	},
	"dependencies": {
		"webpack-merge": "^4.1.0"
	},
	"peerDependencies": {
		"browser-sync": "^2.18.8",
		"webpack-dev-middleware": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0"
	},
	"devDependencies": {
		"babel-core": "^6.24.0",
		"babel-jest": "^19.0.0",
		"babel-preset-env": "^1.2.2",
		"browser-sync": "^2.18.8",
		"glob": "^7.1.6",
		"husky": "^0.14.3",
		"install-peers-cli": "^2.2.0",
		"jest": "^19.0.2",
		"lint-staged": "^4.0.2",
		"module-concat": "^2.1.4",
		"prettier": "^1.5.3",
		"webpack": "^2.3.2"
	},
	"scripts": {
		"prepare": "install-peers",
		"build": "node build/build.js",
		"lint": "prettier --write --use-tabs --single-quote --tab-width=8 --trailing-comma=es5 '{test,src}/**/*.js'",
		"test": "jest",
		"coverage": "jest --coverage",
		"start": "jest --watch --notify",
		"prepublish": "npm run build",
		"precommit": "lint-staged"
	}
}
